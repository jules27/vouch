!!! XHTML 5
!!!

%html{ lang: "en" }
  %head
    %meta{ charset: "utf-8" }
    %meta{ 'http-equiv' => "X-UA-Compatible", :content => "IE=Edge,chrome=1" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %title
      = content_for?(:title) ? yield(:title) : "Vouch"
    = csrf_meta_tags

    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      %script{ src: "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js", type: "text/javascript" }

    = stylesheet_link_tag "application", media: "all"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:400,700|Bitter", media: "all"

  %body
    = render "layouts/navigation"

    .container-fluid
      .row-fluid
        .span10.offset1
          = bootstrap_flash
          = yield

      %footer

    = javascript_include_tag "application"
    = render "layouts/google_analytics"
