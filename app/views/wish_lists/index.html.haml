- if @wish_list.nil? or @wish_list.empty?
  %h4 Places I Want To Go
  %p
    You don't have any places you want to go. Please
    = link_to "add one!", friends_path
- else
  .alert.alert-error.wish-list-errors
  .alert.alert-success.wish-list-success

  %h3 Places I Want To Go In #{@wish_list.city.name}

  .search-form
    Search form here...
  %br

  %div
    %table.table.table-striped.table-condensed.restaurants-listing
      %thead
        %tr
          %th{ colspan: "2" }
            Restaurant
          %th
            Neighborhoods
          %th
            Yelp Rating
          %th
            Reviews
          %th
            Friend Who Inspired
          %th
      %tbody
        - @wish_list.wish_items.each do |item|
          - b = item.business
          - next unless b.present?
          %tr
            %td
              = business_image(b)
            %td
              = b.name
            %td
              = b.neighborhood
            %td
              = business_rating(b)
            %td
              = business_review_count(b)
            %td
              = inspired_by(item)
            %td
              = link_to "Mark As Visited", "#", class: "btn btn-primary mark-item-visited", id: "#{item.id}"
              &nbsp;
              = link_to "Remove", "#", class: "btn btn-danger btn-small remove-wish-item", id: "#{item.id}"

.friends-lists
  - current_user.friends.each do |friend|
    - list = friend.wish_list_in_city(current_user.default_city)
    - next if list.nil? or list.empty?

    %h4 Places #{friend.name} Wants To Go In #{current_user.default_city.name}
    %table.table.table-striped.table-condensed
      %thead
        %tr
          %th{ colspan: "2" }
            Restaurant
          %th
            Neighborhoods
          %th
            Yelp Rating
          %th
            Reviews
          %th
            Friend Who Inspired
          %th
      %tbody
        - list.wish_items.each do |item|
          - b = item.business
          - next unless b.present?
          %tr
            %td
              = business_image(b)
            %td
              = b.name
            %td
              = b.neighborhood
            %td
              = business_rating(b)
            %td
              = business_review_count(b)
            %td
              = inspired_by(item)
            %td
              = link_to "Add to \"Places I Want to Go\"", wish_items_path(city_id: @wish_list.city.id, wish_item: { business_id: b.id, user_id: friend.id}), class: "btn btn-primary", method: :post
